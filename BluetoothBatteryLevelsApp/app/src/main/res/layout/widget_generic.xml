<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Device Icon -->
    <ImageView
        android:id="@+id/widget_device_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_headphones"
        android:tint="@color/widget_accent"
        android:contentDescription="Headphones" />

    <!-- Device Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sony WH-1000XM4"
            android:textColor="@color/widget_text_primary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/widget_battery_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_battery"
                android:tint="@color/widget_accent"
                android:contentDescription="Battery" />

            <TextView
                android:id="@+id/widget_battery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="73%"
                android:textColor="@color/widget_text_secondary"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>