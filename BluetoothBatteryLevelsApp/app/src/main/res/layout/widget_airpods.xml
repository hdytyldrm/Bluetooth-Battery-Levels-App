<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="6dp">

    <!-- Device Name -->
    <TextView
        android:id="@+id/widget_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AirPods Pro"
        android:textColor="@color/widget_text_primary"
        android:textSize="11sp"
        android:textStyle="bold"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="4dp" />

    <!-- Battery Levels Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left Earbud -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/widget_left_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_battery"
                app:tint="@color/widget_accent"
                android:contentDescription="Left Battery" />

            <TextView
                android:id="@+id/widget_left_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="L: 85%"
                android:textColor="@color/widget_text_primary"
                android:textSize="9sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Right Earbud -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/widget_right_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_battery"
                app:tint="@color/widget_accent"
                android:contentDescription="Right Battery" />

            <TextView
                android:id="@+id/widget_right_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="R: 87%"
                android:textColor="@color/widget_text_primary"
                android:textSize="9sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Case -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/widget_case_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_battery"
                app:tint="@color/widget_case_accent"
                android:contentDescription="Case Battery" />

            <TextView
                android:id="@+id/widget_case_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Case: 92%"
                android:textColor="@color/widget_text_primary"
                android:textSize="9sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>