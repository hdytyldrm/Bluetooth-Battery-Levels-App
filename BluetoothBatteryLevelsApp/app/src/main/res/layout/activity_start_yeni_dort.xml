<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Device Card (Tek Card - Yeni Tasarım) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/batteryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/blue_100"
                app:cardBackgroundColor="@color/blue_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- NO CONNECTION SECTION -->
                    <LinearLayout
                        android:id="@+id/noConnectionSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_bluetooth_disabled"
                            app:tint="#FF6B6B"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Device Connected"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connect your headphones to view battery levels"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                android:alpha="0.8"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- CONNECTED SECTION -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible">

                        <!-- Device Info -->
                        <TextView
                            android:id="@+id/deviceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AirPods Pro"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bağlandı"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_700"
                            android:layout_marginBottom="32dp" />

                        <!-- Battery Levels Section (AirPods Layout) -->
                        <LinearLayout
                            android:id="@+id/batteryLevelsSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="3">

                            <!-- Left AirPod -->
                            <LinearLayout
                                android:id="@+id/leftEarbudSection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

                                    <!-- PNG Icon for Left AirPod -->
                                    <ImageView
                                        android:id="@+id/leftBatteryIcon"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/airport_left_3d"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter" />

                                    <!-- L Label -->
                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="top|start"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="2dp"
                                        app:cardCornerRadius="9dp"
                                        app:cardElevation="2dp"
                                        app:cardBackgroundColor="@color/blue_600">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="L"
                                            android:textSize="11sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:gravity="center" />

                                    </com.google.android.material.card.MaterialCardView>

                                </FrameLayout>

                                <!-- Battery Bar -->
                                <LinearLayout
                                    android:layout_width="48dp"
                                    android:layout_height="12dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/battery_background"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="85"
                                        android:background="@drawable/battery_fill_green" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/leftBatteryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="85%"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                            </LinearLayout>

                            <!-- Right AirPod -->
                            <LinearLayout
                                android:id="@+id/rightEarbudSection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

                                    <!-- PNG Icon for Right AirPod -->
                                    <ImageView
                                        android:id="@+id/rightBatteryIcon"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/airport_left_3d"
                                        android:scaleX="-1"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter" />

                                    <!-- R Label -->
                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="top|end"
                                        android:layout_marginTop="2dp"
                                        app:cardCornerRadius="9dp"
                                        app:cardElevation="2dp"
                                        app:cardBackgroundColor="@color/blue_600">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="R"
                                            android:textSize="11sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:gravity="center" />

                                    </com.google.android.material.card.MaterialCardView>

                                </FrameLayout>

                                <!-- Battery Bar -->
                                <LinearLayout
                                    android:layout_width="48dp"
                                    android:layout_height="12dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/battery_background"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="82"
                                        android:background="@drawable/battery_fill_green" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="18" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/rightBatteryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="82%"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                            </LinearLayout>

                            <!-- Case -->
                            <LinearLayout
                                android:id="@+id/caseSection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

                                    <!-- PNG Icon for Case -->
                                    <ImageView
                                        android:id="@+id/caseBatteryIcon"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/pod_case"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter" />

                                </FrameLayout>

                                <!-- Battery Bar -->
                                <LinearLayout
                                    android:layout_width="48dp"
                                    android:layout_height="12dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/battery_background"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="65"
                                        android:background="@drawable/battery_fill_orange" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="35" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/caseBatteryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="65%"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Generic Device Layout (Normal Kulaklık) -->
                        <LinearLayout
                            android:id="@+id/genericDeviceSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="gone">

                            <!-- Üstte tek kulaklık ikonu -->
                            <ImageView
                                android:id="@+id/genericBatteryIcon"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/headphone"
                                android:layout_marginBottom="24dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter" />

                            <!-- Altta sadece TEK batarya yüzdesi -->
                            <TextView
                                android:id="@+id/genericBatteryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90%"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Battery Notifications Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notificationSettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="@dimen/_8sdp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E3F2FD">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_notifications"
                            app:tint="#1976D2" />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batarya Bildirimleri"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2E2E2E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Durum çubuğunda göster"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/notificationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumbTint="@color/white"
                        android:trackTint="#6C757D" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Settings Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">

                    <!-- Pop-up Ayarları Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/pd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardBackgroundColor="@color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F3E5F5">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_settings"
                                    app:tint="#7B1FA2" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pop-up Ayarları"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:textColor="#2E2E2E"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Ses Ayarları Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        android:layout_margin="@dimen/_8sdp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E8F5E8">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_volume"
                                    app:tint="#388E3C" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ses Ayarları"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:textColor="#495057"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Kulaklık Bul Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardBackgroundColor="#F8F9FA"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E9ECEF">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_location"
                                    app:tint="#FF5722" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kulaklık Bul"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:textColor="#495057"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Otomatik Ses Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/sd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        android:layout_margin="@dimen/_8sdp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="#F8F9FA"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E9ECEF">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_auto_sound"
                                    app:tint="#FF9800" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Otomatik Ses"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:textColor="#495057"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:elevation="8dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled" />

    <!-- Bluetooth FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bluetoothFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_bluetooth"
        android:backgroundTint="#6C757D"
        app:tint="#FFFFFF"
        app:elevation="12dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:rippleColor="#E9ECEF"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>